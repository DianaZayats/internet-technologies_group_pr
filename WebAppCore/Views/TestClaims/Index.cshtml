    <h5>IsVerifiedUser</h5>
    <form method="post" asp-action="AddClaim">
        <input type="hidden" name="type" value="IsVerifiedUser" />
        <input type="hidden" name="value" value="true" />
        <button class="btn btn-success">@Localizer["AddIsVerifiedUserButton"]</button>
    </form>
    <form method="post" asp-action="RemoveClaim" class="mt-1">
        <input type="hidden" name="type" value="IsVerifiedUser" />

    </form>
</div>

<hr />

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">@Localizer["ToHomeButton"]</a>
    <a asp-controller="Forum" asp-action="Index" class="btn btn-info">@Localizer["ToForumButton"]</a>
</div>
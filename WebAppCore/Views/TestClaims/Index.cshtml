@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-info">
    <strong>@Localizer["NoteKey"]:</strong> @Localizer["NoteDescription"]
</div>

<h2>@Localizer["CurrentClaimsHeader"]: @ViewBag.UserEmail</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Localizer["ClaimTypeHeader"]</th>
            <th>@Localizer["ClaimValueHeader"]</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Claims != null)
        {
            foreach (var claim in ViewBag.Claims)
            {
                <tr>
                    <td><strong>@claim.Type</strong></td>
                    <td>@claim.Value</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">@Localizer["NoClaimsMessage"]</td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<hr />


<h3>@Localizer["ChangeWorkingHoursHeader"]</h3>
<p>@Localizer["WorkingHoursDescription"]</p>

<form asp-action="UpdateWorkingHours" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="hours" class="form-label">@Localizer["HoursCountLabel"]:</label>
        <input type="number" id="hours" name="hours" class="form-control" value="50" min="0" required />
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["UpdateWorkingHoursButton"]</button>
</form>

<hr />


<h3>@Localizer["ManageForumClaimsHeader"]</h3>
<p>@Localizer["ForumClaimsDescription"]</p>

<div class="mb-4">
    <h5>IsMentor</h5>
    <form method="post" asp-action="AddClaim">
        <input type="hidden" name="type" value="IsMentor" />
        <input type="hidden" name="value" value="true" />
        <button class="btn btn-success">@Localizer["AddIsMentorButton"]</button>
    </form>
    <form method="post" asp-action="RemoveClaim" class="mt-1">
        <input type="hidden" name="type" value="IsMentor" />
        <button class="btn btn-danger">@Localizer["RemoveIsMentorButton"]</button>
    </form>
</div>


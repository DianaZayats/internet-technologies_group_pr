@model SlayLib.Models.Post
@{
    ViewData["Title"] = "Деталі поста";
}

<h1>@Model.Title</h1>

<div class="mb-4">
    <p>@Model.Content</p>
    <small class="text-muted">
        Створено: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
        @if (Model.UpdatedAt != null)
        {
            <span> | Оновлено: @Model.UpdatedAt?.ToString("dd.MM.yyyy HH:mm")</span>
        }
    </small>
</div>

<hr />

<h4>Коментарі (@Model.Comments.Count)</h4>

<div class="mb-4">
    @foreach (var comment in Model.Comments.OrderBy(c => c.CreatedAt))
    {
        <div class="card mb-2 shadow-sm">
            <div class="card-body">
                <p>@comment.Content</p>
                <small class="text-muted">
                    @(comment.Author?.UserName ?? $"User #{comment.AuthorId}") |
                    @comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                </small>
            </div>
        </div>
    }
</div>

<hr />

<h5>Додати коментар</h5>
<form asp-action="AddComment" method="post">
    <input type="hidden" name="postId" value="@Model.Id" />
    <div class="mb-2">
        <textarea name="content" class="form-control" rows="3" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Відправити</button>
</form>

<hr />

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-sm btn-secondary">Повернутися до списку</a>
</div>

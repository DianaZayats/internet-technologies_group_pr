@{
    ViewData["Title"] = "Форум — Теми";
}
@model IEnumerable<SlayLib.Models.Post>

<div class="container py-4 forum-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>

        <a asp-action="Create" class="btn btn-primary">
            ➕ Нова тема
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light fw-bold">
            Теми форуму
        </div>

        <table class="table table-hover mb-0">
            <thead class="table-secondary">
                <tr>
                    <th style="width: 60%">Тема</th>
                    <th style="width: 20%">Створено</th>
                    <th style="width: 20%" class="text-center">Дії</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">
                                <a asp-action="Details" asp-route-id="@item.Id" 
                                   class="text-decoration-none thread-title">
                                   @item.Title
                                </a>
                            </div>

                            <div class="text-muted small mt-1">
                                Автор: @(item.Author != null ? item.Author.FirstName + " " + item.Author.LastName : "Невідомо")
                            </div>
                        </td>

                        <td class="text-muted">
                            @item.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </td>

                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-outline-primary">Читати</a>

                            <a asp-action="Edit" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-outline-secondary">Редаг.</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>

<style>
    .thread-title {
        font-size: 1.05rem;
        color: #0d6efd;
    }

    .thread-title:hover {
        text-decoration: underline;
    }

    .forum-container {
        max-width: 900px;
    }
</style>

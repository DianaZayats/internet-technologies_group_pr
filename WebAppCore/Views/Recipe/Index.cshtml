                        @if (ViewBag.DietType == "keto") { <option value="keto" selected>@Localizer["DietType_Keto"]</option> } else { <option value="keto">@Localizer["DietType_Keto"]</option> }
                        @if (ViewBag.DietType == "gluten-free") { <option value="gluten-free" selected>@Localizer["DietType_GlutenFree"]</option> } else { <option value="gluten-free">@Localizer["DietType_GlutenFree"]</option> }

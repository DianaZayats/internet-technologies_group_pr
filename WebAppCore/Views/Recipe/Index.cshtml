        </div>
    </div>

    <!-- –°–ø–∏—Å–æ–∫ —Ä–µ—Ü–µ–ø—Ç—ñ–≤ -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var recipe in Model)
            {
                var averageRating = ViewData[$"Rating_{recipe.Id}"] as double?;
                var ratingCount = ViewData[$"RatingCount_{recipe.Id}"] as int? ?? 0;
                var favoriteRecipeIds = ViewData["FavoriteRecipeIds"] as List<int> ?? new List<int>();
                var isFavorite = favoriteRecipeIds.Contains(recipe.Id);

                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm rounded-4 recipe-card" style="border: none; overflow: hidden;">
                        <div style="position: relative; height: 200px; overflow: hidden;">
                            <img src="@(recipe.ImageUrl ?? "https://via.placeholder.com/400x300/FF6B6B/FFFFFF?text=" + Uri.EscapeDataString(recipe.Name))"
                                 class="card-img-top" alt="@recipe.Name"
                                 style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s ease;" />
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <button class="btn btn-sm position-absolute top-0 end-0 m-2 favorite-btn" 
                                        data-recipe-id="@recipe.Id" 
                                        style="background: rgba(255,255,255,0.9); border-radius: 50%; width: 40px; height: 40px; border: none;"
                                        title="@(isFavorite ? Localizer["RecipeIndex_RemoveFavorite"].Value : Localizer["RecipeIndex_AddFavorite"].Value)">
                                    @if (isFavorite)
                                    {
                                        <span style="color: #ff6b35;">‚ù§Ô∏è</span>
                                    }
                                    else
                                    {
                                        <span>ü§ç</span>
                                    }
                                </button>
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@recipe.Name</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(recipe.Description.Length > 100 ? recipe.Description.Substring(0, 100) + "..." : recipe.Description)
                            </p>
                            <div class="mb-2">
                                <span class="badge rounded-pill" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white;">
                                    @GetCategoryName(recipe.Category)
                                </span>
                                <span class="badge rounded-pill bg-@GetDifficultyColor(recipe.Difficulty)">
                                    @GetDifficultyName(recipe.Difficulty)
                                </span>
                                <span class="badge rounded-pill bg-secondary">‚è±Ô∏è @recipe.PreparationTime @Localizer["RecipeIndex_Minutes"]</span>
                            </div>
                            @if (averageRating.HasValue)
                            {
                                <div class="mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span style="color: @(i <= averageRating.Value ? "#ffc107" : "#ddd");">‚≠ê</span>
                                    }
                                    <small class="text-muted">(@ratingCount)</small>
                                </div>
                            }
                                        <div class="mt-auto">
                                            <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-gradient rounded-pill w-100 mb-2">
                                                @Localizer["RecipeIndex_ViewDetails"]
                                            </a>
                                            @{
                                                var userIdClaim = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
                                                var userId = userIdClaim?.Value;
                                                var isAuthor = !string.IsNullOrEmpty(userId) && recipe.AuthorId == userId;
                                            }
                                            @if (isAuthor)
                                            {
                                                <div class="d-flex gap-2">
                                                    <a asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-outline-primary rounded-pill flex-fill">
                                                        ‚úèÔ∏è @Localizer["RecipeIndex_Edit"]
                                                    </a>
                                                    <form asp-action="Delete" asp-route-id="@recipe.Id" method="post" class="flex-fill" onsubmit="return confirm('@Localizer["RecipeIndex_DeleteConfirm"]');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-danger rounded-pill w-100">
                                                            üóëÔ∏è @Localizer["RecipeIndex_Delete"]
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                        </div>
                        </div>
                        <div class="card-footer bg-light" style="border-top: 1px solid rgba(255,107,53,0.1);">
                            <small class="text-muted">
                                üë§ @(recipe.Author?.FirstName ?? "–ù–µ–≤—ñ–¥–æ–º–æ") @(recipe.Author?.LastName ?? "")
                                <br />
                                üìÖ @recipe.CreatedAt.ToString("dd.MM.yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center rounded-4">
            <h4>@Localizer["RecipeIndex_NoRecipes"]</h4>
            <p>@Localizer["RecipeIndex_NoRecipesMessage"]</p>
        </div>
    }
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @if (Model.PageIndex > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-featuredPage="@(Model.PageIndex - 1)">‚Üê @Localizer["Previous"]</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-featuredPage="@i">@i</a>
                </li>
            }

            @if (Model.PageIndex < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-featuredPage="@(Model.PageIndex + 1)">@Localizer["Next"] ‚Üí</a>
                </li>
            }
        </ul>
    </nav>
</div>

@functions {
    string GetCategoryName(string category)
    {
        return category switch
        {
            "Breakfast" => Localizer["Category_Breakfast"].Value,
            "Lunch" => Localizer["Category_Lunch"].Value,
            "Dinner" => Localizer["Category_Dinner"].Value,
            "Dessert" => Localizer["Category_Dessert"].Value,
            "Snack" => Localizer["Category_Snack"].Value,
            _ => category
        };
    }

    string GetDifficultyName(string difficulty)
    {
        return difficulty switch
        {
            "Easy" => Localizer["Difficulty_Easy"].Value,
            "Medium" => Localizer["Difficulty_Medium"].Value,
            "Hard" => Localizer["Difficulty_Hard"].Value,
            _ => difficulty
        };
    }

    string GetDifficultyColor(string difficulty)
    {
        return difficulty switch
        {
            "Easy" => "success",
            "Medium" => "warning",
            "Hard" => "danger",
            _ => "secondary"
        };
    }
}

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.favorite-btn').forEach(btn => {
                btn.addEventListener('click', async function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    const recipeId = this.dataset.recipeId;
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("ToggleFavorite", "Recipe")';
                    
                    // Get anti-forgery token from the page
                    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                    if (token) {
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = token;
                        form.appendChild(tokenInput);
                    }
                    
                    const recipeIdInput = document.createElement('input');
                    recipeIdInput.type = 'hidden';
                    recipeIdInput.name = 'recipeId';
                    recipeIdInput.value = recipeId;
                    form.appendChild(recipeIdInput);
                    
                    document.body.appendChild(form);
                    
                    try {
                        const response = await fetch(form.action, {
                            method: 'POST',
                            body: new FormData(form)
                        });
                        
                        if (response.ok) {
                            const data = await response.json();
                            const icon = this.querySelector('span');
                            const title = this.getAttribute('title');
                            
                            if (data.isFavorite) {
                                icon.textContent = '‚ù§Ô∏è';
                                icon.style.color = '#ff6b35';
                                this.setAttribute('title', '@Localizer["RecipeIndex_RemoveFavorite"].Value');
                            } else {
                                icon.textContent = 'ü§ç';
                                icon.style.color = '';
                                this.setAttribute('title', '@Localizer["RecipeIndex_AddFavorite"].Value');
                            }
                        } else {
                            console.error('Failed to toggle favorite:', response.statusText);
                        }
                    } catch (error) {
                        console.error('Error toggling favorite:', error);
                    } finally {
                        document.body.removeChild(form);
                    }
                });
            });
        });
    </script>
}


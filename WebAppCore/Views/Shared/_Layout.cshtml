@using Mit.Models.Configurations
@inject MitConfiguration Cfg
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppCore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebAppCore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="homeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Головна
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="homeDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Головна сторінка</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Archive">Архів</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Конфіденційність</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="postDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Пости
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="postDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Post" asp-action="Index">Список постів</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Post" asp-action="Create">Створити пост</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Premium" asp-action="Index">Premium</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TestClaims" asp-action="Index">Тест Claims</a>
                        </li>


                      
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="SelectLanguage"
                               asp-action="Index"
                               asp-route-returnUrl="@Context.Request.Path">
                                @Localizer["lblLanguageSwitcher"]
                            </a>
                        </li>
                       
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @functions {
                string Mask(string? s)
                {
                    if (string.IsNullOrEmpty(s)) return "";
                    var head = s.Length <= 6 ? s : s.Substring(0, 6);
                    return head + new string('*', Math.Max(0, s.Length - head.Length));
                }
            }

            <span>@(Cfg.ApplicationName ?? "WebAppCore")</span>

            @if (Cfg.MapSettings?.DefaultLocation is not null)
            {
                <span> · @($"{Cfg.MapSettings.DefaultLocation.Latitude:0.####}, {Cfg.MapSettings.DefaultLocation.Longitude:0.####}")</span>
            }

            @if (!string.IsNullOrWhiteSpace(Cfg.ProjectSettings?.Theme))
            {
                <span> · Theme: @Cfg.ProjectSettings.Theme</span>
            }
            @if (Cfg.ProjectSettings?.ShowDebugInfo == true)
            {
                <span> · Debug: on</span>
            }

            @if (!string.IsNullOrWhiteSpace(Cfg.ApiKey))
            {
                <span> · ApiKey: @Mask(Cfg.ApiKey)</span>
            }

            <span> · &copy; 2025 — <a class="text-reset" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
